<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llViewPilMus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/museum_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/museum_top"
        android:orientation="horizontal" >
		<TextView 
		    android:id="@+id/tvTop"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Pilih Museum"
		    android:textSize="13pt"
		    android:textStyle="bold"
		    android:paddingLeft="7pt"
		    android:paddingTop="2pt"/>
		
        <ImageView
            android:id="@+id/magni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_margin="5pt"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_hapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:background="@drawable/button_hapusmuseum"
            android:onClick="onClick" />

        <Button
            android:id="@+id/button_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5pt"
            android:background="@drawable/button_unduh_museum"
            android:onClick="onClick" />
    </LinearLayout>

</LinearLayout>